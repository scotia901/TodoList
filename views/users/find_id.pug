extends layout.pug

block append scripts
    script(type="text/javascript" src="/js/users/app.js")

block stylesheet
    link(rel="stylesheet" href="/css/users/style.css")

block title
    title=pageTitle + " - 아이디 찾기"

block content
        h2(id="content_title") 아이디 찾기
        div(id="main")
            form(method="post" onsubmit="event.preventDefault(); findId();")
                div(class="find_label_wrap")
                    label(for="email") 이메일
                div(id="email_input_wrap" class="input_wrap")
                    input(type="text" id="email" name="email" autocomplete="off")
                div(class="submit_btn_wrap")
                    input(class="submit_btn" type="submit" id="button" value="찾기")