extends layout.pug

block append scripts
    script(type="text/javascript" src="/js/users/app.js")

block stylesheet
    link(rel="stylesheet" href="/css/users/style.css")

block title
    title=pageTitle + " - 회원가입"

block append content
    div(id="content")
        h2(id="content_title") 회원가입
        div(id="main")
            form(onsubmit="event.preventDefault();", autocomplete="off" method="post") 
                div(class="join_label_wrap")
                    label(for="id") 아이디
                div(class="input_wrap" id="id_input_wrap")
                    input(type="text" name="id" id="id")
                div(class="join_label_wrap")
                    label(for="nickname") 별명
                div(class="input_wrap" id="nickname_input_wrap")
                    input(type="text" name="nickname" id="nickname")
                div(class="join_label_wrap")
                    label(for="pswd1") 비밀번호
                div(class="input_wrap" id="pswd1_input_wrap")
                    input(type="password" name="pswd1" id="pswd1")
                div(class="join_label_wrap")
                    label(for="pswd2") 비밀번호 재확인
                div(class="input_wrap" id="pswd2_input_wrap")
                    input(type="password" name="pswd2" id="pswd2")
                div(class="join_label_wrap")
                    label(for="email") 이메일
                div(class="input_wrap" id="email_input_wrap")
                    input(type="email" name="email" id="email")
                div(class="submit_btn_wrap")
                    input(class="submit_btn" type="submit" id="join_btn" value="가입하기")