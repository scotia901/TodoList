extends layout.pug

block append scripts
    script(type="text/javascript" src="/js/users/edit.js")

block stylesheet
    link(rel="stylesheet" href="/css/users/style.css")

block title
    title=pageTitle + " - 비밀번호 변경"

block append content
    div(id="content")
        h2(id="content_title") 비밀번호 변경
        div(id="main")
            div(class="label_wrap")
                label(for="current_pswd") 기존 비밀번호
            div(class="input_wrap" id="current_pswd_input_wrap")
                input(type="password" name="pswd" id="current_pswd")
            div(class="label_wrap")
                label(for="new_pswd1") 비밀번호
            div(class="input_wrap" id="new_pswd1_input_wrap")
                input(type="password" name="new_pswd1" id="new_pswd1")
            div(class="label_wrap")
                label(for="new_pswd2") 비밀번호 재확인
            div(class="input_wrap" id="new_pswd2_input_wrap")
                input(type="password" name="new_pswd2" id="new_pswd2")
            div(class="submit_btn_wrap")
                input(class="submit_btn" type="submit" id="submit_pswd_btn" value="변경하기")
            div(class="back_page_btn_wrap")
                input(class="back_page_btn" type="button" id="back_btn" value="돌아가기")