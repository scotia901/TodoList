extends layout.pug

block append scripts
    script(type="text/javascript" src="/js/users/app.js")

block stylesheet
    link(rel="stylesheet" href="/css/users/style.css")

block title
    title=pageTitle + " - 비밀번호 찾기"

block content
            h2(id="content_title") 비밀번호 찾기
            div(id="main")
                form(method="post" onsubmit="event.preventDefault(); findPswd();")
                    div(class="find_label_wrap")
                        label(for="id") 아이디
                    div(id="id_input_wrap" class="input_wrap")
                        input(type="text" id="id" name="id")
                    div(class="find_label_wrap")
                        label(for="email") 이메일
                    div(id="email_input_wrap" class="input_wrap")
                        input(type="text" id="email" name="email")
                    div(class="submit_btn_wrap")
                        input(class="submit_btn" type="submit" id="submit_pswd_btn" value="찾기")